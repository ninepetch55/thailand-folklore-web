---
interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="th">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>
<body class="luxury-root">
    <div id="master-cursor"></div>
    
    <div class="particles-container">
        {Array.from({ length: 45 }).map((_, i) => (
            <div class="dust-particle" style={`--l:${Math.random()*100}%; --d:${Math.random()*15}s; --s:${Math.random()*3+2}px;`}></div>
        ))}
    </div>

    <main class="main-content-layer">
        <slot />
    </main>

    <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script is:inline>
        const cursor = document.getElementById('master-cursor');
        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
        });
    </script>
</body>
</html>

<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,600;1,300;1,600&display=swap');
    :root { --gold-primary: #bf953f; }
    
    html, body { 
        margin: 0 !important; padding: 0 !important; 
        background: #FDFCFB; cursor: none !important; 
        font-family: 'Cormorant Garamond', serif;
        height: 100%; width: 100%; overflow-x: hidden;
    }
    
    .luxury-root { isolation: isolate; position: relative; }
    
    #master-cursor { 
        width: 10px; height: 10px; background: var(--gold-primary); 
        border-radius: 50%; position: fixed; pointer-events: none; 
        z-index: 10000; transform: translate(-50%, -50%); 
        transition: transform 0.05s ease-out; box-shadow: 0 0 12px var(--gold-primary); 
    }
    
    .particles-container { position: fixed; inset: 0; z-index: 9999; pointer-events: none; }
    .dust-particle { 
        position: absolute; left: var(--l); bottom: -20px; width: var(--s); height: var(--s); 
        background: var(--gold-primary); border-radius: 50%; opacity: 0; 
        animation: floatUp 20s linear infinite var(--d); 
    }
    @keyframes floatUp { 0% { opacity: 0; } 20% { opacity: 0.5; } 100% { transform: translateY(-110vh); opacity: 0; } }
    
    .main-content-layer { position: relative; z-index: 10; width: 100%; }
</style>