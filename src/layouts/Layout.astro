---
interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="th">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
</head>
<body class="m-0 p-0 bg-[#FDFCFB] cursor-none overflow-x-hidden">
    <div id="master-cursor"></div>
    
    <div class="fixed inset-0 z-[100] pointer-events-none">
        {Array.from({ length: 45 }).map((_, i) => (
            <div class="dust" style={`--l:${Math.random()*100}%; --d:${Math.random()*15}s; --s:${Math.random()*3+2}px;`}></div>
        ))}
    </div>

    <main class="relative z-10 w-full"><slot /></main>

    <script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>
    <script is:inline>
        const cursor = document.getElementById('master-cursor');
        document.addEventListener('mousemove', (e) => {
            cursor.style.left = e.clientX + 'px';
            cursor.style.top = e.clientY + 'px';
        });
    </script>
</body>
</html>
<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,600;1,300;1,600&display=swap');
    :root { --gold: #bf953f; }
    html, body { margin: 0 !important; padding: 0 !important; width: 100%; font-family: 'Cormorant Garamond', serif; }
    #master-cursor { width: 10px; height: 10px; background: var(--gold); border-radius: 50%; position: fixed; pointer-events: none; z-index: 9999; transform: translate(-50%, -50%); transition: transform 0.05s ease-out; box-shadow: 0 0 10px var(--gold); }
    .dust { position: absolute; left: var(--l); bottom: -20px; width: var(--s); height: var(--s); background: var(--gold); border-radius: 50%; opacity: 0; animation: floatUp 20s linear infinite var(--d); }
    @keyframes floatUp { 0% { opacity: 0; } 20% { opacity: 0.5; } 100% { transform: translateY(-110vh); opacity: 0; } }
</style>