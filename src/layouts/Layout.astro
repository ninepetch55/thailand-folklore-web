---
interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="th">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <title>{title} - V29</title> </head>
<body class="sovereign-body-v29">
    <div id="cursor-v29"></div>
    <main class="root-v29"><slot /></main>
</body>
</html>
<style is:global>
    @import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,600;1,300;1,600&display=swap');
    :root { --gold-sovereign: #bf953f; }
    html, body { 
        margin: 0 !important; padding: 0 !important; 
        width: 100vw; overflow-x: hidden !important; 
        background: #FDFCFB; cursor: none !important;
        font-family: 'Cormorant Garamond', serif;
    }
    #cursor-v29 { width: 10px; height: 10px; background: var(--gold-sovereign); border-radius: 50%; position: fixed; pointer-events: none; z-index: 9999; transform: translate(-50%, -50%); transition: transform 0.05s linear; box-shadow: 0 0 10px var(--gold-sovereign); }
</style>