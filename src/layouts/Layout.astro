<div class="particles-field">
  {Array.from({ length: 50 }).map((_, i) => (
    <div 
      class="gold-dust" 
      style={`
        --size: ${Math.random() * 4 + 2}px;
        --left: ${Math.random() * 100}%;
        --delay: ${Math.random() * 15}s;
        --duration: ${Math.random() * 20 + 10}s;
        --opacity: ${Math.random() * 0.4 + 0.2};
      `}
    ></div>
  ))}
</div>

<style is:global>
  .particles-field { position: fixed; inset: 0; z-index: 3; pointer-events: none; }
  
  .gold-dust {
    position: absolute;
    width: var(--size);
    height: var(--size);
    left: var(--left);
    bottom: -10px;
    background: linear-gradient(45deg, #bf953f, #fcf6ba);
    border-radius: 50%;
    opacity: 0;
    filter: blur(1px) drop-shadow(0 0 5px #fcf6ba);
    animation: float-up-vivid var(--duration) linear infinite;
    animation-delay: var(--delay);
  }

  @keyframes float-up-vivid {
    0% { transform: translateY(0) translateX(0); opacity: 0; }
    10% { opacity: var(--opacity); }
    90% { opacity: var(--opacity); }
    100% { transform: translateY(-110vh) translateX(100px); opacity: 0; }
  }
</style>