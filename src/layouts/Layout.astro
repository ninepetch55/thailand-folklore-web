---
interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body class="bg-[#FDFCFB] overflow-x-hidden cursor-none">
		
		<div id="bg-spotlight"></div>
		<div class="noise-overlay"></div>
		
		<div class="particles-field">
			{Array.from({ length: 45 }).map((_, i) => (
				<div class={`gold-dust d${i}`}></div>
			))}
		</div>

		<main class="relative z-10"><slot /></main>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,600;1,300;1,600&display=swap');
	:root { --gold-primary: #bf953f; --gold-light: #fcf6ba; }

	html, body { margin: 0; padding: 0; background: #FDFCFB; }

	/* üè∫ Texture ‡∏Å‡∏£‡∏∞‡∏î‡∏≤‡∏©‡πÄ‡∏Å‡πà‡∏≤ (‡∏™‡∏•‡∏≤‡∏¢‡∏Ñ‡∏ß‡∏≤‡∏°‡πÇ‡∏•‡πà‡∏á) */
	.noise-overlay {
		position: fixed; inset: 0;
		background-image: url('https://www.transparenttextures.com/patterns/natural-paper.png');
		opacity: 0.5; pointer-events: none; z-index: 2;
	}

	/* üî¶ Spotlight ‡∏™‡∏µ‡∏ó‡∏≠‡∏á‡∏ó‡∏µ‡πà‡∏Å‡∏ß‡πâ‡∏≤‡∏á‡πÅ‡∏•‡∏∞‡∏ô‡∏∏‡πà‡∏°‡∏ô‡∏ß‡∏•‡∏Ç‡∏∂‡πâ‡∏ô */
	#bg-spotlight {
		position: fixed; width: 100vw; height: 100vh;
		background: radial-gradient(circle at center, rgba(191,149,63,0.1) 0%, transparent 80%);
		pointer-events: none; z-index: 1; transform: translate(-50%, -50%);
	}

	/* ‚ú® ‡∏ù‡∏∏‡πà‡∏ô‡∏ó‡∏≠‡∏á‡∏£‡∏∞‡∏î‡∏±‡∏ö Premium */
	.particles-field { position: fixed; inset: 0; z-index: 3; pointer-events: none; }
	.gold-dust {
		position: absolute; background: linear-gradient(45deg, var(--gold-primary), var(--gold-light));
		border-radius: 50%; opacity: 0;
		filter: drop-shadow(0 0 5px var(--gold-light));
		animation: floating-gold 15s infinite linear;
	}

	@keyframes floating-gold {
		0% { transform: translateY(110vh) translateX(0) rotate(0deg); opacity: 0; }
		20% { opacity: 0.6; }
		80% { opacity: 0.4; }
		100% { transform: translateY(-10vh) translateX(150px) rotate(360deg); opacity: 0; }
	}

	/* ‡∏™‡∏∏‡πà‡∏°‡∏Ç‡∏ô‡∏≤‡∏î‡πÅ‡∏•‡∏∞‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏ù‡∏∏‡πà‡∏ô‡∏ó‡∏≠‡∏á 45 ‡∏à‡∏∏‡∏î */
	{Array.from({ length: 45 }).map((_, i) => `
		.d${i} {
			width: ${Math.random() * 5 + 2}px;
			height: ${Math.random() * 5 + 2}px;
			left: ${Math.random() * 100}%;
			animation-delay: ${Math.random() * 10}s;
			animation-duration: ${Math.random() * 15 + 10}s;
		}
	`).join('')}

	/* üìè ‡∏Å‡∏£‡∏∞‡∏ä‡∏±‡∏ö‡∏û‡∏∑‡πâ‡∏ô‡∏ó‡∏µ‡πà Section ‡πÉ‡∏´‡πâ‡πÅ‡∏ô‡πà‡∏ô‡∏Ç‡∏∂‡πâ‡∏ô */
	section { 
		padding-top: 40px !important; 
		padding-bottom: 40px !important; 
		margin-bottom: 0px !important;
	}

	/* üìΩÔ∏è Reveal Effect */
	section { opacity: 0; transform: translateY(30px); transition: all 1.5s ease-out; }
	section.visible { opacity: 1; transform: translateY(0); }
</style>

<script>
	const spot = document.getElementById('bg-spotlight');
	window.addEventListener('mousemove', (e) => {
		spot.style.left = e.clientX + 'px';
		spot.style.top = e.clientY + 'px';
	});

	const observer = new IntersectionObserver((entries) => {
		entries.forEach(entry => {
			if (entry.isIntersecting) entry.target.classList.add('visible');
		});
	}, { threshold: 0.05 });
	document.querySelectorAll('section').forEach(s => observer.observe(s));
</script>