---
interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body class="bg-[#F9F8F6] overflow-x-hidden cursor-none">
		<div id="bg-spotlight"></div>
		<div class="bg-pattern"></div>
		
		<main class="relative z-10"><slot /></main>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,600;1,300;1,600&display=swap');
	:root { --gold: #bf953f; }
	
	html, body { margin: 0; padding: 0; background: #F9F8F6; }
	.font-serif { font-family: 'Cormorant Garamond', serif !important; }

	/* üè∫ ‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á‡∏•‡∏≤‡∏¢‡πÑ‡∏ó‡∏¢‡πÅ‡∏ö‡∏ö‡∏à‡∏≤‡∏á‡∏û‡∏¥‡πÄ‡∏®‡∏© */
	.bg-pattern {
		position: fixed; inset: 0;
		background-image: url('https://www.transparenttextures.com/patterns/natural-paper.png'); /* ‡πÄ‡∏õ‡∏•‡∏µ‡πà‡∏¢‡∏ô‡πÄ‡∏õ‡πá‡∏ô‡∏•‡∏≤‡∏¢‡πÑ‡∏ó‡∏¢‡πÑ‡∏î‡πâ‡∏†‡∏≤‡∏¢‡∏´‡∏•‡∏±‡∏á */
		opacity: 0.3; pointer-events: none; z-index: 1;
	}

	/* üî¶ ‡πÅ‡∏™‡∏á Spotlight ‡∏™‡∏µ‡∏ó‡∏≠‡∏á‡∏à‡∏≤‡∏á‡πÜ */
	#bg-spotlight {
		position: fixed; width: 600px; height: 600px;
		background: radial-gradient(circle, rgba(191,149,63,0.08) 0%, transparent 70%);
		border-radius: 50%; pointer-events: none; z-index: 2;
		transform: translate(-50%, -50%);
		transition: transform 0.1s ease-out;
	}

	/* üéûÔ∏è Reveal Animation ‡∏™‡∏≥‡∏´‡∏£‡∏±‡∏ö‡∏ó‡∏∏‡∏Å Section */
	section { opacity: 0; transform: translateY(40px); transition: all 1.2s cubic-bezier(0.2, 0.8, 0.2, 1); }
	section.visible { opacity: 1; transform: translateY(0); }
</style>

<script>
	const spot = document.getElementById('bg-spotlight');
	window.addEventListener('mousemove', (e) => {
		spot.style.left = e.clientX + 'px';
		spot.style.top = e.clientY + 'px';
	});

	const obs = new IntersectionObserver((es) => {
		es.forEach(e => { if (e.isIntersecting) e.target.classList.add('visible'); });
	}, { threshold: 0.1 });
	document.querySelectorAll('section').forEach(s => obs.observe(s));
</script>