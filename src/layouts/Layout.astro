---
interface Props { title: string; }
const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
	</head>
	<body class="bg-[#F9F8F6] overflow-x-hidden cursor-none selection:bg-[#bf953f] selection:text-white">
		
		<div id="bg-spotlight"></div>
		
		<div class="particles-container">
			{Array.from({ length: 20 }).map((_, i) => (
				<div class={`particle p${i}`}></div>
			))}
		</div>

		<main class="relative z-10"><slot /></main>
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=Cormorant+Garamond:ital,wght@0,300;0,600;1,300;1,600&display=swap');
	:root { --gold: #bf953f; }
	html, body { margin: 0; padding: 0; background: #F9F8F6; scroll-behavior: smooth; }
	.font-serif { font-family: 'Cormorant Garamond', serif !important; }

	/* üî¶ Spotlight Effect */
	#bg-spotlight {
		position: fixed; width: 800px; height: 800px;
		background: radial-gradient(circle, rgba(191,149,63,0.06) 0%, transparent 70%);
		border-radius: 50%; pointer-events: none; z-index: 1;
		transform: translate(-50%, -50%); transition: transform 0.15s ease-out;
	}

	/* ‚ú® ‡∏•‡∏∞‡∏≠‡∏≠‡∏á‡∏ó‡∏≠‡∏á (Particles) */
	.particles-container { position: fixed; inset: 0; pointer-events: none; z-index: 2; }
	.particle { 
		position: absolute; width: 4px; height: 4px; background: var(--gold); 
		border-radius: 50%; opacity: 0.2; filter: blur(1px);
		animation: float-up 20s linear infinite;
	}
	@keyframes float-up {
		0% { transform: translateY(100vh) translateX(0); opacity: 0; }
		50% { opacity: 0.3; }
		100% { transform: translateY(-10vh) translateX(100px); opacity: 0; }
	}
	
	/* ‡∏Å‡∏£‡∏∞‡∏à‡∏≤‡∏¢‡∏•‡∏∞‡∏≠‡∏≠‡∏á‡∏ó‡∏≠‡∏á‡πÅ‡∏ö‡∏ö‡∏™‡∏∏‡πà‡∏° */
	.p1 { left: 10%; animation-duration: 25s; } .p2 { left: 30%; animation-duration: 18s; animation-delay: 2s; }
	.p3 { left: 70%; animation-duration: 22s; animation-delay: 5s; } .p4 { left: 90%; animation-duration: 30s; }
    /* (‡∏Ñ‡∏∏‡∏ì‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÄ‡∏û‡∏¥‡πà‡∏°‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏™‡∏∏‡πà‡∏°‡∏≠‡∏∑‡πà‡∏ô‡πÜ ‡πÑ‡∏î‡πâ‡∏ï‡∏≤‡∏°‡πÉ‡∏à‡∏ä‡∏≠‡∏ö‡∏Ñ‡∏£‡∏±‡∏ö) */

	/* üéûÔ∏è Section Reveal (‡∏à‡∏µ‡πä‡∏î‡∏Å‡∏ß‡πà‡∏≤‡πÄ‡∏î‡∏¥‡∏°) */
	section { opacity: 0; filter: blur(10px); transform: scale(0.95) translateY(50px); transition: all 1.4s cubic-bezier(0.2, 0.8, 0.2, 1); }
	section.visible { opacity: 1; filter: blur(0); transform: scale(1) translateY(0); }
</style>

<script>
	const spot = document.getElementById('bg-spotlight');
	window.addEventListener('mousemove', (e) => {
		spot.style.left = e.clientX + 'px';
		spot.style.top = e.clientY + 'px';
	});

	const obs = new IntersectionObserver((es) => {
		es.forEach(e => { if (e.isIntersecting) e.target.classList.add('visible'); });
	}, { threshold: 0.1 });
	document.querySelectorAll('section').forEach(s => obs.observe(s));
</script>