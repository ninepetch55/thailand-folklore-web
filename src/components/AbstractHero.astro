---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---
<section class="hero-full">
  <div class="swiper mainHeroSwiper">
    <div class="swiper-wrapper">
      {images.map((src) => (
        <div class="swiper-slide">
          <div class="zoom-image-box">
            <img src={src} alt="Heritage" />
          </div>
        </div>
      ))}
    </div>
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
    <div class="swiper-pagination"></div>
  </div>

  <div class="hero-overlay-content">
    <p class="tag">THE SOVEREIGN DIGITAL HERITAGE</p>
    <h1 class="font-serif">Thailand <span class="gold">Folklore</span></h1>
  </div>
</section>

<script is:inline>
  new Swiper(".mainHeroSwiper", {
    loop: true,
    speed: 2000,
    autoplay: { delay: 5000, disableOnInteraction: false },
    effect: 'fade',
    fadeEffect: { crossFade: true },
    navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
    pagination: { el: ".swiper-pagination", clickable: true },
  });
</script>

<style>
  .hero-full { 
    height: 100vh; /* บังคับ 100% ของความสูงหน้าจอ */
    width: 100vw;
    position: relative; 
    overflow: hidden;
    margin: 0; padding: 0;
  }
  .mainHeroSwiper { width: 100%; height: 100%; }
  .zoom-image-box { width: 100%; height: 100%; overflow: hidden; }
  .swiper-slide img { 
    width: 100%; height: 100%; object-fit: cover; 
    animation: kenburns 10s ease infinite alternate;
  }
  @keyframes kenburns { 0% { transform: scale(1); } 100% { transform: scale(1.15); } }

  .hero-overlay-content {
    position: absolute; inset: 0; z-index: 20;
    display: flex; flex-direction: column; align-items: center; justify-content: center;
    background: rgba(0,0,0,0.3); color: #fff; pointer-events: none;
  }
  .tag { font-size: 12px; letter-spacing: 0.8em; color: #bf953f; font-weight: bold; }
  h1 { font-size: clamp(3rem, 10vw, 7rem); margin: 0; text-shadow: 0 10px 30px rgba(0,0,0,0.5); }
  .gold { color: #bf953f; font-style: italic; }

  /* ปรับแต่งปุ่ม Swiper ให้ดูหรูหรา */
  :global(.swiper-button-next), :global(.swiper-button-prev) { color: #bf953f !important; }
  :global(.swiper-pagination-bullet-active) { background: #bf953f !important; }
</style>