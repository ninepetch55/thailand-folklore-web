---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---
<section class="hero-master">
    <div class="swiper heroSwiper">
        <div class="swiper-wrapper">
            {images.map((src) => (
                <div class="swiper-slide"><img src={src} class="ken-burns" alt="Thailand Folklore Heritage" /></div>
            ))}
        </div>
        <div class="swiper-button-next luxury-arrow"></div>
        <div class="swiper-button-prev luxury-arrow"></div>
        <div class="swiper-pagination luxury-pagination"></div>
    </div>
    <div class="hero-overlay">
        <p class="tag">THE SOVEREIGN DIGITAL HERITAGE</p>
        <h1 class="main-title italic">Thailand <span class="gold">Folklore</span></h1>
    </div>
</section>

<script is:inline>
    window.addEventListener('load', () => {
        new Swiper(".heroSwiper", {
            loop: true, speed: 2500, effect: 'fade',
            observer: true, observeParents: true, // กู้คืนภาพที่หายไป
            autoplay: { delay: 6000, disableOnInteraction: false },
            navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
            pagination: { el: ".swiper-pagination", clickable: true },
        });
    });
</script>

<style>
    .hero-master { width: 100vw; height: 100vh; position: relative; overflow: hidden; background: #000; top: 0; left: 0; }
    .swiper { width: 100%; height: 100%; }
    .ken-burns { width: 100%; height: 100%; object-fit: cover; animation: zoomIn 15s infinite alternate; }
    @keyframes zoomIn { from { transform: scale(1); } to { transform: scale(1.15); } }
    
    .hero-overlay { position: absolute; inset: 0; z-index: 20; display: flex; flex-direction: column; align-items: center; justify-content: center; color: white; background: rgba(0,0,0,0.35); text-align: center; pointer-events: none; }
    .tag { font-size: 11px; letter-spacing: 0.8em; color: var(--gold); font-weight: bold; margin-bottom: 25px; }
    .main-title { font-size: clamp(3.5rem, 12vw, 8rem); margin: 0; line-height: 1; }
    .gold { color: var(--gold); }

    /* ✨ Luxury Buttons Styling */
    .luxury-arrow { color: var(--gold) !important; transition: 0.4s cubic-bezier(0.2, 0.8, 0.2, 1); }
    .luxury-arrow:hover { transform: scale(1.3); text-shadow: 0 0 20px var(--gold); }
    .luxury-arrow::after { font-size: 22px !important; font-weight: 300; }

    /* ✨ Pagination 6 Lines Interactive */
    :global(.luxury-pagination .swiper-pagination-bullet) { 
        background: rgba(255,255,255,0.3) !important; width: 35px; height: 2px; 
        border-radius: 0; transition: 0.6s !important; opacity: 1 !important; margin: 0 8px !important;
    }
    :global(.luxury-pagination .swiper-pagination-bullet-active) { 
        background: var(--gold) !important; width: 70px; box-shadow: 0 0 10px var(--gold); 
    }
</style>