---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---
<section class="hero-wrap">
    <div class="swiper heroSwiper">
        <div class="swiper-wrapper">
            {images.map((src) => (
                <div class="swiper-slide"><img src={src} class="ken-burns" alt="Heritage" /></div>
            ))}
        </div>
        <div class="swiper-button-next luxury-btn"></div>
        <div class="swiper-button-prev luxury-btn"></div>
        <div class="swiper-pagination luxury-pagination"></div>
    </div>
    <div class="hero-content">
        <p class="tag">THE SOVEREIGN DIGITAL HERITAGE</p>
        <h1 class="font-serif italic">Thailand <span class="gold">Folklore</span></h1>
    </div>
</section>

<script is:inline>
    window.addEventListener('load', () => {
        new Swiper(".heroSwiper", {
            loop: true, speed: 2500, effect: 'fade',
            autoplay: { delay: 5000, disableOnInteraction: false },
            navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
            pagination: { el: ".swiper-pagination", clickable: true },
        });
    });
</script>

<style>
    .hero-wrap { position: relative; width: 100vw; height: 100vh; overflow: hidden; background: #000; left: 0; }
    .swiper { width: 100%; height: 100%; }
    .ken-burns { width: 100%; height: 100%; object-fit: cover; animation: zoom 15s infinite alternate; }
    @keyframes zoom { from { transform: scale(1); } to { transform: scale(1.1); } }
    .hero-content { position: absolute; inset: 0; z-index: 20; display: flex; flex-direction: column; align-items: center; justify-content: center; color: white; background: rgba(0,0,0,0.3); pointer-events: none; text-align: center; }
    .tag { font-size: 11px; letter-spacing: 0.8em; color: var(--gold); font-weight: bold; margin-bottom: 20px; }
    h1 { font-size: clamp(3.5rem, 12vw, 8rem); margin: 0; line-height: 1; }
    .gold { color: var(--gold); }

    /* ✨ Luxury Arrows with Hover Effect */
    .luxury-btn { color: var(--gold) !important; transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1); }
    .luxury-btn:hover { transform: scale(1.4); text-shadow: 0 0 20px var(--gold); filter: brightness(1.5); }
    .luxury-btn::after { font-size: 24px !important; font-weight: bold; }

    /* ✨ Circle Pagination Interactive */
    :global(.luxury-pagination .swiper-pagination-bullet) { 
        width: 10px !important; height: 10px !important; 
        background: transparent !important; border: 1px solid rgba(255,255,255,0.5) !important;
        opacity: 1 !important; transition: 0.4s; margin: 0 10px !important;
    }
    :global(.luxury-pagination .swiper-pagination-bullet-active) { 
        background: var(--gold) !important; border-color: var(--gold) !important; 
        transform: scale(1.5); box-shadow: 0 0 15px var(--gold);
    }
</style>