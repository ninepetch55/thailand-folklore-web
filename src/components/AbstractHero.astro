---
// เรียกจาก public/img/h1.jpg ถึง h6.jpg
const heroImages = [
  "/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", 
  "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"
];
---
<section class="hero-stable">
  <div class="container mx-auto px-6">
    <div class="text-center mb-12">
      <p class="text-gold tracking-[0.5em] text-xs font-bold mb-4">SOVEREIGN DIGITAL HERITAGE</p>
      <h1 class="text-6xl md:text-8xl font-serif italic m-0">Thailand <span class="text-[#bf953f]">Folklore</span></h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-[250px]">
      {heroImages.map((src, i) => (
        <div class={`rounded-[30px] overflow-hidden border border-black/5 
          ${i === 0 || i === 4 ? 'md:col-span-2' : ''} 
          ${i === 1 ? 'md:row-span-2' : ''}`}>
          <img src={src} alt="Heritage" class="w-full h-full object-cover transition-transform duration-700 hover:scale-110" />
        </div>
      ))}
    </div>
  </div>
</section>