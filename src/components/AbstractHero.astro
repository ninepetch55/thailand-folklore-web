---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---
<section class="hero-container">
    <div class="swiper heroSwiper">
        <div class="swiper-wrapper">
            {images.map((src) => (
                <div class="swiper-slide"><img src={src} class="ken-burns" /></div>
            ))}
        </div>
        
        <div class="swiper-button-next custom-nav"></div>
        <div class="swiper-button-prev custom-nav"></div>
        
        <div class="swiper-pagination custom-dots"></div>
    </div>

    <div class="hero-overlay-content">
        <p class="tag">THE SOVEREIGN DIGITAL HERITAGE</p>
        <h1 class="main-title">Thailand <span class="gold-text">Folklore</span></h1>
    </div>
</section>

<script is:inline>
    window.addEventListener('load', () => {
        new Swiper(".heroSwiper", {
            loop: true, speed: 2000, effect: 'fade',
            autoplay: { delay: 5000, disableOnInteraction: false },
            navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
            pagination: { el: ".swiper-pagination", clickable: true },
            observer: true, observeParents: true
        });
    });
</script>

<style>
    .hero-container { position: relative; width: 100vw; height: 100vh; overflow: hidden; background: #000; }
    .swiper { width: 100%; height: 100%; }
    .ken-burns { width: 100%; height: 100%; object-fit: cover; animation: zoom 15s infinite alternate; }
    @keyframes zoom { from { transform: scale(1); } to { transform: scale(1.1); } }

    .hero-overlay-content {
        position: absolute; inset: 0; z-index: 10;
        display: flex; flex-direction: column; align-items: center; justify-content: center;
        color: white; pointer-events: none; text-align: center;
        background: radial-gradient(circle, rgba(0,0,0,0.1) 0%, rgba(0,0,0,0.5) 100%);
    }
    .tag { font-size: 11px; letter-spacing: 0.8em; color: var(--gold); font-weight: bold; margin-bottom: 20px; }
    .main-title { font-size: clamp(3rem, 10vw, 7.5rem); margin: 0; font-style: italic; }
    .gold-text { color: var(--gold); }

    /* üß≠ Luxury Navigation Styles (‡∏•‡∏π‡∏Å‡∏®‡∏£‡∏°‡∏µ‡∏ß‡∏á‡∏Å‡∏•‡∏°) */
    .custom-nav { 
        width: 60px !important; height: 60px !important; 
        background: rgba(191,149,63,0.1); 
        border: 1px solid var(--gold); 
        border-radius: 50%; 
        color: var(--gold) !important; 
        z-index: 50 !important;
        transition: 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }
    .custom-nav:hover { background: var(--gold); color: #fff !important; box-shadow: 0 0 20px var(--gold); }
    .custom-nav::after { font-size: 20px !important; font-weight: bold; }

    /* üî¢ Circle Pagination Styles (‡∏ß‡∏á‡∏Å‡∏•‡∏°‡∏•‡∏≥‡∏î‡∏±‡∏ö‡∏†‡∏≤‡∏û) */
    :global(.custom-dots) { bottom: 40px !important; z-index: 50 !important; }
    :global(.custom-dots .swiper-pagination-bullet) { 
        width: 12px !important; height: 12px !important; 
        background: transparent !important; border: 1.5px solid rgba(255,255,255,0.7) !important;
        opacity: 1 !important; transition: 0.4s; margin: 0 10px !important;
    }
    :global(.custom-dots .swiper-pagination-bullet-active) { 
        background: var(--gold) !important; border-color: var(--gold) !important; 
        transform: scale(1.4); box-shadow: 0 0 15px var(--gold);
    }
</style>