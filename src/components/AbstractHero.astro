---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---
<section class="hero-boundary-lock">
    <div class="swiper heroSwiper">
        <div class="swiper-wrapper">
            {images.map((src) => (
                <div class="swiper-slide"><img src={src} class="ken-burns-img" alt="Folklore" /></div>
            ))}
        </div>
        <div class="swiper-button-next luxury-nav"></div>
        <div class="swiper-button-prev luxury-nav"></div>
        <div class="swiper-pagination luxury-pagination"></div>
    </div>
    <div class="hero-overlay-ui">
        <p class="tag">THE SOVEREIGN DIGITAL HERITAGE</p>
        <h1 class="font-serif italic text-white">Thailand <span class="gold">Folklore</span></h1>
    </div>
</section>

<script is:inline>
    window.addEventListener('load', () => {
        new Swiper(".heroSwiper", {
            loop: true, speed: 2000, effect: 'fade',
            autoplay: { delay: 5000, disableOnInteraction: false },
            navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
            pagination: { el: ".swiper-pagination", clickable: true },
            watchSlidesProgress: true, // üõ°Ô∏è ‡∏ï‡∏£‡∏ß‡∏à‡∏™‡∏≠‡∏ö‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏†‡∏≤‡∏û‡∏´‡πâ‡∏≤‡∏°‡πÅ‡∏´‡∏•‡∏°
            observer: true, observeParents: true
        });
    });
</script>

<style>
    .hero-boundary-lock { 
        position: relative; width: 100vw; height: 100vh; 
        overflow: hidden !important; /* üõ°Ô∏è ‡∏ï‡∏±‡∏î‡∏†‡∏≤‡∏û‡πÅ‡∏´‡∏•‡∏°‡∏ó‡∏¥‡πâ‡∏á‡∏ó‡∏±‡∏ô‡∏ó‡∏µ */
        background: #000; left: 0; 
    }
    .swiper { width: 100%; height: 100%; }
    .ken-burns-img { width: 100%; height: 100%; object-fit: cover; animation: zoom 15s infinite alternate; }
    @keyframes zoom { from { transform: scale(1); } to { transform: scale(1.1); } }

    .hero-overlay-ui { position: absolute; inset: 0; z-index: 20; display: flex; flex-direction: column; align-items: center; justify-content: center; color: white; background: rgba(0,0,0,0.3); pointer-events: none; text-align: center; }
    .tag { font-size: 11px; letter-spacing: 0.8em; color: var(--gold); font-weight: bold; margin-bottom: 20px; }
    h1 { font-size: clamp(3.5rem, 12vw, 8rem); margin: 0; line-height: 1; }
    .gold { color: var(--gold); }

    .luxury-nav { 
        color: var(--gold) !important; border: 1.5px solid var(--gold); 
        width: 60px !important; height: 60px !important; border-radius: 50%; 
        background: rgba(0,0,0,0.2); transition: 0.4s; z-index: 50; 
    }
    .luxury-nav:hover { background: var(--gold); color: white !important; box-shadow: 0 0 20px var(--gold); }
    .luxury-nav::after { font-size: 18px !important; font-weight: bold; }

    :global(.luxury-pagination .swiper-pagination-bullet) { 
        width: 12px !important; height: 12px !important; background: transparent !important; 
        border: 1.5px solid white !important; opacity: 1 !important; margin: 0 10px !important; transition: 0.4s; 
    }
    :global(.luxury-pagination .swiper-pagination-bullet-active) { 
        background: var(--gold) !important; border-color: var(--gold) !important; transform: scale(1.3); 
    }
</style>