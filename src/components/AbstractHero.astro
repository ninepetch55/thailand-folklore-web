---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---
<section class="hero-fixed-container">
    <div class="swiper heroSwiper">
        <div class="swiper-wrapper">
            {images.map((src) => (
                <div class="swiper-slide"><img src={src} class="ken-burns" alt="Heritage" /></div>
            ))}
        </div>
        <div class="swiper-button-next luxury-nav"></div>
        <div class="swiper-button-prev luxury-nav"></div>
        <div class="swiper-pagination luxury-pagination"></div>
    </div>
    <div class="hero-content">
        <p class="tag">THE SOVEREIGN DIGITAL HERITAGE</p>
        <h1 class="font-serif italic text-white">Thailand <span class="text-[#bf953f]">Folklore</span></h1>
    </div>
</section>

<script is:inline>
    // ‡∏ö‡∏±‡∏á‡∏Ñ‡∏±‡∏ö Initialize ‡∏ó‡∏±‡∏ô‡∏ó‡∏µ‡∏ó‡∏µ‡πà‡∏´‡∏ô‡πâ‡∏≤‡∏à‡∏≠‡∏û‡∏£‡πâ‡∏≠‡∏°
    const startHero = () => {
        new Swiper(".heroSwiper", {
            loop: true,
            effect: 'fade',
            speed: 2500,
            autoplay: { delay: 5000, disableOnInteraction: false },
            navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
            pagination: { el: ".swiper-pagination", clickable: true },
            watchSlidesProgress: true, // ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏†‡∏≤‡∏û‡πÅ‡∏´‡∏•‡∏°
            on: {
                init: function() { this.update(); }
            }
        });
    };
    window.addEventListener('load', startHero);
</script>

<style>
    .hero-fixed-container { 
        position: relative; 
        width: 100vw; 
        height: 100vh; 
        overflow: hidden !important; /* ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏†‡∏≤‡∏û‡πÅ‡∏´‡∏•‡∏°‡∏≠‡∏≠‡∏Å‡∏Ç‡∏ß‡∏≤ */
        background: #000;
    }
    .swiper { width: 100%; height: 100%; }
    .ken-burns { width: 100%; height: 100%; object-fit: cover; animation: zoomIn 15s infinite alternate; }
    @keyframes zoomIn { from { transform: scale(1); } to { transform: scale(1.1); } }
    
    .hero-content { 
        position: absolute; inset: 0; z-index: 20; 
        display: flex; flex-direction: column; align-items: center; justify-content: center; 
        pointer-events: none; background: rgba(0,0,0,0.3); text-align: center;
    }
    .tag { font-size: 11px; letter-spacing: 0.8em; color: #bf953f; font-weight: bold; margin-bottom: 20px; }
    h1 { font-size: clamp(3.5rem, 12vw, 8rem); margin: 0; line-height: 1; }

    /* üß≠ Luxury Controls */
    .luxury-nav { color: #bf953f !important; border: 1px solid #bf953f; width: 60px !important; height: 60px !important; border-radius: 50%; background: rgba(0,0,0,0.2); transition: 0.4s; }
    .luxury-nav:hover { background: #bf953f; color: #fff !important; box-shadow: 0 0 20px #bf953f; }
    .luxury-nav::after { font-size: 20px !important; font-weight: bold; }

    :global(.luxury-pagination .swiper-pagination-bullet) { 
        width: 12px !important; height: 12px !important; 
        background: transparent !important; border: 1.5px solid white !important; 
        opacity: 1 !important; transition: 0.4s; margin: 0 10px !important;
    }
    :global(.luxury-pagination .swiper-pagination-bullet-active) { 
        background: #bf953f !important; border-color: #bf953f !important; transform: scale(1.4); 
    }
</style>