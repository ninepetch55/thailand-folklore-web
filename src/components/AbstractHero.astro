---
// เช็คให้ชัวร์ว่าชื่อไฟล์ในโฟลเดอร์ public/img/ เป็นตัวเล็กหมดตามนี้ครับ
const heroImages = [
  { src: "/img/h1.jpg" }, { src: "/img/h2.jpg" }, { src: "/img/h3.jpg" },
  { src: "/img/h4.jpg" }, { src: "/img/h5.jpg" }, { src: "/img/h6.jpg" }
];
---
<section class="w-full pt-32 pb-20">
  <div class="max-w-[1400px] mx-auto px-10">
    <div class="text-center mb-20">
      <h1 class="text-7xl md:text-9xl font-serif italic m-0">Thailand <span class="text-[#bf953f]">Folklore</span></h1>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 auto-rows-[250px]">
      {heroImages.map((img, i) => (
        <div class={`rounded-[40px] overflow-hidden border border-gold/10 
          ${i === 0 || i === 4 ? 'md:col-span-2' : ''} 
          ${i === 1 ? 'md:row-span-2' : ''}`}>
          <img src={img.src} class="w-full h-full object-cover transition-transform duration-1000 hover:scale-110" alt="Heritage" />
        </div>
      ))}
    </div>
  </div>
</section>