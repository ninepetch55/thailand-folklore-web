---
const heroImages = [
  { src: "/img/h1.jpg" }, { src: "/img/h2.jpg" }, { src: "/img/h3.jpg" },
  { src: "/img/h4.jpg" }, { src: "/img/h5.jpg" }, { src: "/img/h6.jpg" }
];
---
<section class="hero-section">
  <div class="container mx-auto px-10">
    <div class="text-center mb-16">
      <p class="text-[10px] tracking-[0.8em] text-[#bf953f] font-bold mb-4">SOVEREIGN DIGITAL HERITAGE</p>
      <h1 class="text-6xl md:text-8xl italic m-0">Thailand <span class="text-[#bf953f]">Folklore</span></h1>
    </div>

    <div class="hero-bento-grid">
      {heroImages.map((img, i) => (
        <div class={`bento-item item-${i + 1}`}>
          <img src={img.src} alt="Heritage" loading="eager" class="hero-img" />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .hero-bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 250px);
    gap: 20px;
    max-width: 1400px;
    margin: 0 auto;
  }
  .bento-item { border-radius: 30px; overflow: hidden; border: 1px solid rgba(191,149,63,0.1); background: #eee; }
  .hero-img { width: 100%; height: 100%; object-fit: cover; transition: 1.5s; }
  .bento-item:hover .hero-img { transform: scale(1.1); }

  /* Grid Positioning */
  .item-1 { grid-column: span 2; }
  .item-2 { grid-row: span 2; }
  .item-5 { grid-column: span 2; }

  @media (max-width: 1024px) {
    .hero-bento-grid { grid-template-columns: repeat(2, 1fr); grid-template-rows: auto; }
    .item-1, .item-2, .item-5 { grid-column: span 1; grid-row: span 1; }
  }
</style>