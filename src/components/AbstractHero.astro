---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---
<section class="hero-master-final">
    <div class="swiper heroSwiper">
        <div class="swiper-wrapper">
            {images.map((src) => (
                <div class="swiper-slide"><img src={src} class="ken-burns" alt="Heritage" /></div>
            ))}
        </div>
        <div class="swiper-button-next luxury-btn"></div>
        <div class="swiper-button-prev luxury-btn"></div>
        <div class="swiper-pagination luxury-dots"></div>
    </div>
    <div class="hero-overlay">
        <p class="tag">THE SOVEREIGN DIGITAL HERITAGE</p>
        <h1 class="main-title font-serif italic">Thailand <span class="gold">Folklore</span></h1>
    </div>
</section>

<script is:inline>
    window.addEventListener('load', () => {
        new Swiper(".heroSwiper", {
            loop: true, speed: 2500, effect: 'fade',
            autoplay: { delay: 5000, disableOnInteraction: false },
            navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
            pagination: { el: ".swiper-pagination", clickable: true },
            observer: true, observeParents: true,
        });
    });
</script>

<style>
    .hero-master-final { position: relative; width: 100vw; height: 100vh; overflow: hidden; background: #000; left: 0; }
    .swiper { width: 100%; height: 100%; }
    .ken-burns { width: 100%; height: 100%; object-fit: cover; animation: zoom 15s infinite alternate; }
    @keyframes zoom { from { transform: scale(1); } to { transform: scale(1.15); } }
    
    .hero-overlay { position: absolute; inset: 0; z-index: 5; display: flex; flex-direction: column; align-items: center; justify-content: center; color: white; background: rgba(0,0,0,0.3); text-align: center; pointer-events: none; }
    .tag { font-size: 11px; letter-spacing: 0.8em; color: var(--gold); font-weight: bold; margin-bottom: 20px; }
    .main-title { font-size: clamp(3.5rem, 12vw, 8rem); margin: 0; line-height: 1; }
    .gold { color: var(--gold); }

    /* ðŸ§­ Navigation & Clickable Logic */
    .luxury-btn { color: var(--gold) !important; z-index: 20 !important; pointer-events: auto !important; transition: 0.4s; }
    .luxury-btn:hover { transform: scale(1.3); text-shadow: 0 0 15px var(--gold); }
    
    :global(.luxury-dots) { z-index: 20 !important; pointer-events: auto !important; bottom: 40px !important; }
    :global(.luxury-dots .swiper-pagination-bullet) { 
        width: 12px !important; height: 12px !important; 
        background: transparent !important; border: 1px solid rgba(255,255,255,0.6) !important;
        opacity: 1 !important; transition: 0.4s; margin: 0 10px !important;
    }
    :global(.luxury-dots .swiper-pagination-bullet-active) { 
        background: var(--gold) !important; border-color: var(--gold) !important; 
        transform: scale(1.4); box-shadow: 0 0 15px var(--gold);
    }
</style>