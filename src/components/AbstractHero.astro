---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---
<section class="hero-full-container">
    <div class="swiper heroSwiper">
        <div class="swiper-wrapper">
            {images.map((src) => (
                <div class="swiper-slide"><img src={src} class="ken-burns-img" /></div>
            ))}
        </div>
        <div class="swiper-button-next"></div>
        <div class="swiper-button-prev"></div>
        <div class="swiper-pagination"></div>
    </div>
    <div class="hero-text-overlay">
        <p class="tag">THE SOVEREIGN DIGITAL HERITAGE</p>
        <h1 class="main-title">Thailand <span class="gold">Folklore</span></h1>
    </div>
</section>

<script is:inline>
    document.addEventListener('DOMContentLoaded', () => {
        new Swiper(".heroSwiper", {
            loop: true, speed: 3000, effect: 'fade',
            autoplay: { delay: 5000 },
            navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
            pagination: { el: ".swiper-pagination", clickable: true },
        });
    });
</script>

<style>
    .hero-full-container { position: relative; width: 100vw; height: 100vh; background: #000; overflow: hidden; }
    .swiper { width: 100%; height: 100%; }
    .ken-burns-img { width: 100%; height: 100%; object-fit: cover; animation: kenburns 15s infinite alternate; }
    @keyframes kenburns { from { transform: scale(1); } to { transform: scale(1.15); } }
    .hero-text-overlay { position: absolute; inset: 0; z-index: 20; display: flex; flex-direction: column; align-items: center; justify-content: center; color: white; text-align: center; pointer-events: none; background: rgba(0,0,0,0.3); }
    .tag { font-size: 12px; letter-spacing: 0.8em; color: var(--gold); font-weight: bold; margin-bottom: 20px; }
    .main-title { font-size: clamp(3rem, 10vw, 7rem); margin: 0; font-style: italic; }
    .gold { color: var(--gold); }
    :global(.swiper-button-next), :global(.swiper-button-prev) { color: var(--gold) !important; }
    :global(.swiper-pagination-bullet-active) { background: var(--gold) !important; }
</style>