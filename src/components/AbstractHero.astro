---
const heroImages = [
  { src: "/img/h1.jpg" }, { src: "/img/h2.jpg" }, { src: "/img/h3.jpg" },
  { src: "/img/h4.jpg" }, { src: "/img/h5.jpg" }, { src: "/img/h6.jpg" }
];
---
<section class="hero-master">
  <div class="container-hero">
    <div class="header-text">
      <p class="tag">SOVEREIGN DIGITAL HERITAGE</p>
      <h1 class="title font-serif">Thailand <span class="gold">Folklore</span></h1>
    </div>

    <div class="hero-bento-grid">
      {heroImages.map((img, i) => (
        <div class={`bento-item item-${i + 1}`}>
          <img src={img.src} alt="Heritage" class="hero-img" />
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .hero-master {
    position: relative;
    z-index: 50; /* ‡∏ö‡∏±‡∏á‡∏Ñ‡∏±‡∏ö‡πÉ‡∏´‡πâ‡∏•‡∏≠‡∏¢‡πÄ‡∏´‡∏ô‡∏∑‡∏≠‡∏ó‡∏∏‡∏Å‡πÄ‡∏•‡πÄ‡∏¢‡∏≠‡∏£‡πå‡∏û‡∏∑‡πâ‡∏ô‡∏´‡∏•‡∏±‡∏á */
    padding: 120px 20px 80px 20px;
    width: 100%;
    box-sizing: border-box;
  }
  .container-hero { max-width: 1300px; margin: 0 auto; }
  .header-text { text-align: center; margin-bottom: 60px; }
  .tag { font-size: 10px; letter-spacing: 0.8em; color: #bf953f; font-weight: bold; margin-bottom: 20px; }
  .title { font-size: clamp(3rem, 10vw, 7rem); margin: 0; color: #1a1a1a; line-height: 1; }
  .gold { color: #bf953f; font-style: italic; }

  /* üèóÔ∏è Grid Structure ‡∏ó‡∏µ‡πà‡πÅ‡∏Ç‡πá‡∏á‡πÅ‡∏£‡∏á‡∏ó‡∏µ‡πà‡∏™‡∏∏‡∏î */
  .hero-bento-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-template-rows: repeat(2, 280px);
    gap: 20px;
  }
  .bento-item { 
    position: relative;
    border-radius: 40px; 
    overflow: hidden; 
    background: #eee; /* ‡∏™‡∏µ‡∏™‡∏≥‡∏£‡∏≠‡∏á‡∏ñ‡πâ‡∏≤‡πÇ‡∏´‡∏•‡∏î‡∏£‡∏π‡∏õ‡πÑ‡∏°‡πà‡∏Ç‡∏∂‡πâ‡∏ô */
    border: 1px solid rgba(191,149,63,0.15);
  }
  .hero-img { 
    width: 100%; height: 100%; object-fit: cover; 
    display: block; /* ‡∏õ‡πâ‡∏≠‡∏á‡∏Å‡∏±‡∏ô‡∏ä‡πà‡∏≠‡∏á‡∏ß‡πà‡∏≤‡∏á‡πÉ‡∏ï‡πâ‡∏†‡∏≤‡∏û */
  }

  .item-1 { grid-column: span 2; }
  .item-2 { grid-row: span 2; }
  .item-5 { grid-column: span 2; }

  @media (max-width: 1024px) {
    .hero-bento-grid { grid-template-columns: repeat(2, 1fr); grid-template-rows: auto; }
    .item-1, .item-2, .item-5 { grid-column: span 1; grid-row: span 1; }
    .bento-item { height: 250px; }
  }
</style>