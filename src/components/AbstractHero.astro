---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---
<section class="hero-sovereign-final">
    <div class="swiper heroSwiper">
        <div class="swiper-wrapper">
            {images.map((src) => (
                <div class="swiper-slide"><img src={src} class="ken-burns-img" alt="Folklore" /></div>
            ))}
        </div>
        
        <div class="nav-overlay">
            <div class="swiper-button-prev gold-circle-btn"></div>
            <div class="swiper-button-next gold-circle-btn"></div>
        </div>
        
        <div class="swiper-pagination gold-dots"></div>
    </div>

    <div class="center-content">
        <p class="tag">THE SOVEREIGN DIGITAL HERITAGE</p>
        <h1 class="main-title italic">Thailand <span class="gold">Folklore</span></h1>
    </div>
</section>

<script is:inline>
    window.addEventListener('load', () => {
        new Swiper(".heroSwiper", {
            loop: true, speed: 2500, effect: 'fade',
            autoplay: { delay: 5000, disableOnInteraction: false },
            navigation: { nextEl: ".swiper-button-next", prevEl: ".swiper-button-prev" },
            pagination: { el: ".swiper-pagination", clickable: true },
            observer: true, observeParents: true,
        });
    });
</script>

<style>
    .hero-sovereign-final { width: 100vw; height: 100vh; position: relative; overflow: hidden; background: #000; left: 0; }
    .swiper { width: 100%; height: 100%; }
    .ken-burns-img { width: 100%; height: 100%; object-fit: cover; animation: zoomOut 20s infinite alternate; }
    @keyframes zoomOut { from { transform: scale(1.15); } to { transform: scale(1); } }

    .center-content { position: absolute; inset: 0; z-index: 5; display: flex; flex-direction: column; align-items: center; justify-content: center; color: white; pointer-events: none; text-align: center; background: rgba(0,0,0,0.3); }
    .tag { font-size: 11px; letter-spacing: 0.8em; color: var(--gold-brand); font-weight: bold; margin-bottom: 20px; }
    .main-title { font-size: clamp(3.5rem, 12vw, 8rem); margin: 0; line-height: 1; }
    .gold { color: var(--gold-brand); }

    /* ðŸ§­ Luxury Arrows */
    .nav-overlay { position: absolute; top: 50%; left: 0; width: 100%; transform: translateY(-50%); z-index: 50; display: flex; justify-content: space-between; padding: 0 40px; pointer-events: none; }
    .gold-circle-btn { 
        position: relative !important; width: 65px !important; height: 65px !important; margin: 0 !important; 
        border: 1px solid var(--gold-brand); border-radius: 50%; color: var(--gold-brand) !important; 
        background: rgba(191,149,63,0.1); pointer-events: auto !important; transition: 0.5s ease;
    }
    .gold-circle-btn:hover { background: var(--gold-brand); color: white !important; box-shadow: 0 0 20px var(--gold-brand); }
    .gold-circle-btn::after { font-size: 22px !important; font-weight: bold; }

    /* ðŸ”¢ Circle Pagination */
    :global(.gold-dots) { bottom: 40px !important; z-index: 50 !important; pointer-events: auto !important; }
    :global(.gold-dots .swiper-pagination-bullet) { width: 12px !important; height: 12px !important; background: transparent !important; border: 1px solid rgba(255,255,255,0.7) !important; opacity: 1 !important; margin: 0 12px !important; transition: 0.4s; }
    :global(.gold-dots .swiper-pagination-bullet-active) { background: var(--gold-brand) !important; border-color: var(--gold-brand) !important; transform: scale(1.4); box-shadow: 0 0 15px var(--gold-brand); }
</style>