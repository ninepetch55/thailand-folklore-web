---
const images = ["/img/h1.jpg", "/img/h2.jpg", "/img/h3.jpg", "/img/h4.jpg", "/img/h5.jpg", "/img/h6.jpg"];
---

<section class="hero-slider-section">
  <div class="header-content">
    <p class="tag">SOVEREIGN DIGITAL HERITAGE</p>
    <h1 class="font-serif italic">Thailand <span class="gold">Folklore</span></h1>
  </div>

  <div class="swiper heroSwiper">
    <div class="swiper-wrapper">
      {images.map((src) => (
        <div class="swiper-slide">
          <div class="slide-frame">
            <img src={src} alt="Heritage" loading="eager" />
          </div>
        </div>
      ))}
    </div>
    <div class="swiper-pagination"></div>
  </div>
</section>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

<script is:inline>
  new Swiper(".heroSwiper", {
    slidesPerView: 1.2, // เห็นภาพข้างๆ เล็กน้อยเพื่อความนุ่มนวล
    centeredSlides: true,
    spaceBetween: 30,
    loop: true,
    autoplay: { delay: 3000, disableOnInteraction: false },
    pagination: { el: ".swiper-pagination", clickable: true },
    breakpoints: {
      768: { slidesPerView: 2.5 },
      1024: { slidesPerView: 3.5 }
    }
  });
</script>

<style>
  .hero-slider-section { padding: 120px 0 60px 0; overflow: hidden; }
  .header-content { text-align: center; margin-bottom: 60px; }
  .tag { font-size: 10px; letter-spacing: 0.8em; color: #bf953f; font-weight: bold; }
  h1 { font-size: clamp(3rem, 10vw, 7rem); margin-top: 20px; color: #1a1a1a; }
  .gold { color: #bf953f; }

  .heroSwiper { width: 100%; padding: 50px 0; }
  .swiper-slide { transition: 0.6s cubic-bezier(0.2, 0.8, 0.2, 1); }
  .slide-frame { 
    border-radius: 40px; overflow: hidden; height: 500px; 
    border: 1px solid rgba(191,149,63,0.1); background: #f0f0f0;
    box-shadow: 0 20px 40px rgba(0,0,0,0.05);
  }
  .swiper-slide img { width: 100%; height: 100%; object-fit: cover; }
  
  /* ขยายรูปที่อยู่ตรงกลางให้เด่น */
  .swiper-slide-active { transform: scale(1.05); }
  .swiper-slide-active .slide-frame { border-color: #bf953f; box-shadow: 0 40px 80px rgba(191,149,63,0.15); }

  :global(.swiper-pagination-bullet-active) { background: #bf953f !important; }
</style>