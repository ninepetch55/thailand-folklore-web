---
const items = [
  { city: "PARIS", img: "/img/g1.jpg" }, { city: "TOKYO", img: "/img/g2.jpg" },
  { city: "NEW YORK", img: "/img/g3.jpg" }, { city: "LONDON", img: "/img/g4.jpg" },
  { city: "MILAN", img: "/img/g5.jpg" }, { city: "DUBAI", img: "/img/g6.jpg" },
  { city: "SEOUL", img: "/img/g7.jpg" }, { city: "BANGKOK", img: "/img/g8.jpg" }
];
---
<section class="outbound-section active-visibility">
  <div class="header-content">
    <p class="tag">GLOBAL OUTBOUND 80%</p>
    <h2 class="font-serif italic">The Movement of Heritage</h2>
  </div>

  <div class="fluid-grid">
    {items.map((p, i) => (
      <div class="art-card">
        <div class="frame">
          <img src={p.img} alt={p.city} loading="lazy" />
          <div class="overlay">
            <h3 class="font-serif italic">{p.city}</h3>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .outbound-section { 
    width: 100%; padding: 60px 0; background: transparent; 
    opacity: 1 !important; /* บังคับให้แสดงผลไว้ก่อนเพื่อความชัวร์ */
  }
  .header-content { text-align: center; margin-bottom: 60px; }
  .tag { font-size: 10px; letter-spacing: 0.8em; color: #bf953f; font-weight: bold; }

  .fluid-grid { 
    display: grid; grid-template-columns: repeat(4, 1fr); gap: 25px; 
    max-width: 1400px; margin: 0 auto; padding: 0 40px;
  }

  .art-card { transition: 1s cubic-bezier(0.2, 0.8, 0.2, 1); }
  
  /* สลายความแข็งด้วยการเยื้องตำแหน่ง */
  .art-card:nth-child(odd) { transform: translateY(-20px); }
  .art-card:nth-child(even) { transform: translateY(20px); }

  .frame { 
    position: relative; border-radius: 30px; overflow: hidden; 
    border: 1px solid rgba(191,149,63,0.1); background: #fff;
    aspect-ratio: 3/4;
  }
  
  img { width: 100%; height: 100%; object-fit: cover; transition: 1.5s; }
  
  .art-card:hover .frame { transform: scale(1.05); border-color: #bf953f; box-shadow: 0 30px 60px rgba(191,149,63,0.2); }
  .art-card:hover img { transform: scale(1.1); }

  .overlay { 
    position: absolute; inset: 0; background: rgba(0,0,0,0.3); 
    display: flex; align-items: center; justify-content: center; 
    opacity: 0; transition: 0.5s; 
  }
  .art-card:hover .overlay { opacity: 1; }
  .overlay h3 { color: #fff; font-size: 2rem; }

  @media (max-width: 1024px) {
    .fluid-grid { grid-template-columns: repeat(2, 1fr); }
    .art-card { transform: none !important; }
  }
</style>