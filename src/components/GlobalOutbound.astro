---
const items = [
  { city: "PARIS", img: "/img/g1.jpg" }, { city: "TOKYO", img: "/img/g2.jpg" },
  { city: "NEW YORK", img: "/img/g3.jpg" }, { city: "LONDON", img: "/img/g4.jpg" },
  { city: "MILAN", img: "/img/g5.jpg" }, { city: "DUBAI", img: "/img/g6.jpg" },
  { city: "SEOUL", img: "/img/g7.jpg" }, { city: "BANGKOK", img: "/img/g8.jpg" }
];
---
<section class="outbound-experience">
  <div class="header">
    <p class="tag-gold">GLOBAL OUTBOUND 80%</p>
    <h2 class="font-serif italic title-main">The Movement of Heritage</h2>
  </div>

  <div class="floating-grid">
    {items.map((p, i) => (
      <div class={`art-card group ${i % 2 === 0 ? 'shift-up' : 'shift-down'}`}>
        <div class="museum-frame">
          <div class="img-zoom-box">
            <img src={p.img} alt={p.city} loading="lazy" />
          </div>
          <div class="card-glow"></div>
          <div class="card-overlay">
            <h3 class="font-serif italic text-3xl">{p.city}</h3>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .outbound-experience { width: 100%; padding: 120px 0; background: #F9F8F6; overflow: hidden; }
  .header { text-align: center; margin-bottom: 100px; }
  .tag-gold { font-size: 11px; letter-spacing: 0.8em; color: #bf953f; font-weight: bold; margin-bottom: 20px; }
  .title-main { font-size: 3rem; color: #1a1a1a; }

  .floating-grid { 
    display: grid; grid-template-columns: repeat(4, 1fr); gap: 30px; 
    max-width: 1500px; margin: 0 auto; padding: 0 40px; 
  }

  /* üéà ‡∏™‡∏•‡∏≤‡∏¢‡∏Ñ‡∏ß‡∏≤‡∏°‡πÅ‡∏Ç‡πá‡∏á‡∏î‡πâ‡∏ß‡∏¢‡∏Å‡∏≤‡∏£‡∏Ç‡∏¢‡∏±‡∏ö‡∏ï‡∏≥‡πÅ‡∏´‡∏ô‡πà‡∏á‡∏™‡∏π‡∏á‡∏ï‡πà‡∏≥ (Staggered) */
  .art-card.shift-up { transform: translateY(-30px); }
  .art-card.shift-down { transform: translateY(30px); }

  .museum-frame { 
    position: relative; background: #fff; padding: 12px; border: 1px solid rgba(191,149,63,0.1);
    transition: all 0.8s cubic-bezier(0.2, 0.8, 0.2, 1);
  }
  
  .img-zoom-box { width: 100%; aspect-ratio: 3/4; overflow: hidden; }
  .img-zoom-box img { width: 100%; height: 100%; object-fit: cover; transition: 1.5s; }

  /* Hover Effects */
  .art-card:hover .museum-frame { 
    border-color: #bf953f; transform: scale(1.05) translateY(-10px); 
    box-shadow: 0 40px 80px rgba(191,149,63,0.15); z-index: 50; 
  }
  .art-card:hover img { transform: scale(1.15); }
  .card-overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.4); display: flex; align-items: center; justify-content: center; opacity: 0; transition: 0.5s; }
  .art-card:hover .card-overlay { opacity: 1; }
  .card-overlay h3 { color: #fff; text-shadow: 0 2px 10px rgba(0,0,0,0.5); }

  @media (max-width: 1024px) {
    .floating-grid { grid-template-columns: repeat(2, 1fr); gap: 20px; }
    .art-card.shift-up, .art-card.shift-down { transform: none; }
  }
</style>