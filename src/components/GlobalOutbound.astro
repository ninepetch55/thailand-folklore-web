<style>
  /* เพิ่มลงในส่วน CSS เดิม */
  .museum-frame {
    border-radius: 20px; /* ทำให้มุมนุ่มนวลขึ้น */
    overflow: hidden;
    transition: all 1s cubic-bezier(0.2, 0.8, 0.2, 1);
  }
  
  /* ระบบลอยแบบสุ่มความสูงเพื่อให้ดูไม่แข็ง */
  .art-card:nth-child(odd) { transform: translateY(-40px); }
  .art-card:nth-child(even) { transform: translateY(40px); }
  
  /* เมื่อ Hover ให้เกิดการ "เบ่งบาน" (Expansion) */
  .art-card:hover .museum-frame {
    border-radius: 5px; /* ค่อยๆ คืนรูปเมื่อเน้นดู */
    transform: scale(1.1) rotate(1deg);
  }
</style>