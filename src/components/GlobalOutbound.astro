---
const items = [
  { city: "PARIS", img: "/img/g1.jpg" }, { city: "TOKYO", img: "/img/g2.jpg" },
  { city: "NEW YORK", img: "/img/g3.jpg" }, { city: "LONDON", img: "/img/g4.jpg" },
  { city: "MILAN", img: "/img/g5.jpg" }, { city: "DUBAI", img: "/img/g6.jpg" },
  { city: "SEOUL", img: "/img/g7.jpg" }, { city: "BANGKOK", img: "/img/g8.jpg" }
];
---
<section class="outbound-wrap">
  <div class="header">
    <p class="tag">GLOBAL OUTBOUND 80%</p>
    <h2 class="font-serif italic title">The Movement of Heritage</h2>
  </div>

  <div class="grid-8">
    {items.map((p) => (
      <div class="out-card group">
        <div class="corner tl"></div><div class="corner tr"></div>
        <div class="corner bl"></div><div class="corner br"></div>
        <div class="img-box">
          <img src={p.img} alt={p.city} loading="lazy" />
          <div class="overlay">
            <h3 class="font-serif italic">{p.city}</h3>
          </div>
        </div>
      </div>
    ))}
  </div>
</section>

<style>
  .outbound-wrap { width: 100%; padding: 100px 0; background: #F9F8F6; text-align: center; }
  .grid-8 { display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; max-width: 1500px; margin: 0 auto; padding: 0 40px; }
  .out-card { position: relative; aspect-ratio: 3/4; padding: 10px; background: #fff; border: 1px solid rgba(191,149,63,0.15); transition: 0.7s cubic-bezier(0.23, 1, 0.32, 1); }
  .out-card:hover { transform: translateY(-15px); border-color: #bf953f; z-index: 10; box-shadow: 0 30px 60px rgba(191,149,63,0.1); }
  .img-box { width: 100%; height: 100%; overflow: hidden; position: relative; }
  .img-box img { width: 100%; height: 100%; object-fit: cover; transition: 1.2s; }
  .out-card:hover img { transform: scale(1.1); }
  .overlay { position: absolute; inset: 0; background: rgba(0,0,0,0.3); display: flex; align-items: center; justify-content: center; opacity: 0; transition: 0.5s; }
  .out-card:hover .overlay { opacity: 1; }
  .overlay h3 { color: white; font-size: 2.5rem; letter-spacing: 0.1em; }
  
  .corner { position: absolute; width: 15px; height: 15px; border: 2px solid #bf953f; opacity: 0.2; transition: 0.5s; }
  .tl { top: -4px; left: -4px; border-right: none; border-bottom: none; }
  .tr { top: -4px; right: -4px; border-left: none; border-bottom: none; }
  .bl { bottom: -4px; left: -4px; border-right: none; border-top: none; }
  .br { bottom: -4px; right: -4px; border-left: none; border-top: none; }
  .out-card:hover .corner { width: 35px; height: 35px; opacity: 1; }

  @media (max-width: 1024px) { .grid-8 { grid-template-columns: repeat(2, 1fr); } }
</style>