<section class="stats-luxury-wrap">
    <div class="stats-grid-v18">
        {[ {t:26, l:'SERIES'}, {t:26, l:'ARCHIVE'}, {t:28, l:'NODES'}, {t:124, l:'ARTIFACTS'} ].map(s => (
            <div class="stat-luxury-item">
                <div class="circle-animation-box">
                    <svg viewBox="0 0 100 100">
                        <circle class="c-track" cx="50" cy="50" r="45"></circle>
                        <circle class="c-silk" cx="50" cy="50" r="45"></circle>
                    </svg>
                    <h3 class="stat-display-num" data-target={s.t}>0</h3>
                </div>
                <p class="stat-subtitle">{s.l}</p>
            </div>
        ))}
    </div>
</section>

<script is:inline>
    const runStatsLuxury = () => {
        const obs = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const h3 = entry.target.querySelector('.stat-display-num');
                    const silk = entry.target.querySelector('.c-silk');
                    const targetNum = parseInt(h3.dataset.target);
                    const circumference = 283;
                    
                    silk.style.strokeDasharray = circumference;
                    silk.style.strokeDashoffset = circumference;

                    let startTime = null;
                    const duration = 2500;

                    const frame = (now) => {
                        if (!startTime) startTime = now;
                        const elapsed = now - startTime;
                        const progress = Math.min(elapsed / duration, 1);
                        
                        // Update Number
                        h3.innerText = Math.floor(progress * targetNum);
                        
                        // Update Silk Line (Dashoffset)
                        const offset = circumference - (progress * (circumference * 0.8));
                        silk.style.strokeDashoffset = offset;

                        if (progress < 1) requestAnimationFrame(frame);
                        else h3.innerText = targetNum;
                    };
                    requestAnimationFrame(frame);
                    obs.unobserve(entry.target);
                }
            });
        }, { threshold: 0.6 });
        document.querySelectorAll('.stat-luxury-item').forEach(el => obs.observe(el));
    };
    window.addEventListener('load', runStatsLuxury);
</script>

<style>
    .stats-luxury-wrap { padding: 120px 0; background: #FDFCFB; position: relative; z-index: 10; }
    .stats-grid-v18 { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(4, 1fr); gap: 30px; }
    .stat-luxury-item { text-align: center; }
    .circle-animation-box { position: relative; width: 140px; height: 140px; margin: 0 auto 20px; }
    svg { transform: rotate(-90deg); width: 100%; height: 100%; }
    circle { fill: none; stroke-width: 2.5; }
    .c-track { stroke: rgba(191,149,63,0.1); }
    .c-silk { stroke: var(--gold-brand); transition: none; }
    .stat-display-num { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; font-size: 38px; color: var(--gold-brand); margin: 0; }
    .stat-subtitle { font-size: 10px; letter-spacing: 0.5em; color: #999; font-weight: bold; }
    @media (max-width: 768px) { .stats-grid-v18 { grid-template-columns: repeat(2, 1fr); gap: 60px; } }
</style>