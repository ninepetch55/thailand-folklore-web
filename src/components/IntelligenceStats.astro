<section class="stats-outer">
    <div class="stats-grid">
        {[ 
            {t:26, l:'SERIES'}, {t:26, l:'ARCHIVE'}, 
            {t:28, l:'NODES'}, {t:124, l:'ARTIFACTS'} 
        ].map(s => (
            <div class="stat-box">
                <div class="circle-wrap">
                    <svg viewBox="0 0 100 100">
                        <circle class="c-bg" cx="50" cy="50" r="45"></circle>
                        <circle class="c-silk" cx="50" cy="50" r="45"></circle>
                    </svg>
                    <h3 class="s-num" data-target={s.t}>0</h3>
                </div>
                <p class="s-label">{s.l}</p>
            </div>
        ))}
    </div>
</section>

<script is:inline>
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const el = entry.target;
                const target = parseInt(el.dataset.target);
                let current = 0;
                const duration = 2000;
                const step = target / (duration / 50);
                
                const timer = setInterval(() => {
                    current += step;
                    if (current >= target) {
                        el.innerText = target;
                        clearInterval(timer);
                    } else {
                        el.innerText = Math.floor(current);
                    }
                }, 50);
                entry.target.closest('.stat-box').classList.add('silk-run');
                observer.unobserve(el);
            }
        });
    }, { threshold: 0.5 });
    document.querySelectorAll('.s-num').forEach(n => observer.observe(n));
</script>

<style>
    .stats-outer { padding: 120px 0; background: #FDFCFB; }
    .stats-grid { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
    .stat-box { text-align: center; opacity: 0.3; transition: 1s; }
    .stat-box.silk-run { opacity: 1; }
    .circle-wrap { position: relative; width: 140px; height: 140px; margin: 0 auto 20px; }
    svg { transform: rotate(-90deg); }
    circle { fill: none; stroke-width: 2; }
    .c-bg { stroke: rgba(191,149,63,0.1); }
    .c-silk { 
        stroke: var(--gold); stroke-dasharray: 283; stroke-dashoffset: 283; 
        transition: 3s cubic-bezier(0.4, 0, 0.2, 1); 
    }
    .silk-run .c-silk { stroke-dashoffset: 80; } /* เส้นสายไหมวิ่งเมื่อมองเห็น */
    .s-num { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; font-size: 38px; color: var(--gold); margin: 0; }
    .s-label { font-size: 10px; letter-spacing: 0.6em; color: #999; font-weight: bold; }
    @media (max-width: 768px) { .stats-grid { grid-template-columns: repeat(2, 1fr); gap: 60px; } }
</style>