<section class="stats-master-wrap">
    <div class="stats-grid-v22">
        {[ {t:26, l:'SERIES'}, {t:26, l:'ARCHIVE'}, {t:28, l:'NODES'}, {t:124, l:'ARTIFACTS'} ].map(s => (
            <div class="stat-card-v22">
                <div class="silk-wrap">
                    <svg viewBox="0 0 100 100">
                        <circle class="c-bg" cx="50" cy="50" r="45"></circle>
                        <circle class="c-silk" cx="50" cy="50" r="45"></circle>
                    </svg>
                    <h3 class="stat-n" data-target={s.t}>0</h3>
                </div>
                <p class="stat-l">{s.l}</p>
            </div>
        ))}
    </div>
</section>

<script is:inline>
    const startSilkAnimation = () => {
        const obs = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const h3 = entry.target.querySelector('.stat-n');
                    const silk = entry.target.querySelector('.c-silk');
                    const targetNum = parseInt(h3.dataset.target);
                    const circumference = 2 * Math.PI * 45; // 282.7
                    
                    silk.style.strokeDasharray = circumference;
                    silk.style.strokeDashoffset = circumference;

                    let start = null;
                    const duration = 2500;
                    const animate = (time) => {
                        if (!start) start = time;
                        const progress = Math.min((time - start) / duration, 1);
                        h3.innerText = Math.floor(progress * targetNum);
                        silk.style.strokeDashoffset = circumference - (progress * (circumference * 0.8));
                        if (progress < 1) requestAnimationFrame(animate);
                        else h3.innerText = targetNum;
                    };
                    requestAnimationFrame(animate);
                    obs.unobserve(entry.target);
                }
            });
        }, { threshold: 0.6 });
        document.querySelectorAll('.stat-card-v22').forEach(b => obs.observe(b));
    };
    window.addEventListener('load', startSilkAnimation);
</script>

<style>
    .stats-master-wrap { padding: 120px 0; background: #FDFCFB; }
    .stats-grid-v22 { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
    .stat-card-v22 { text-align: center; }
    .silk-wrap { position: relative; width: 140px; height: 140px; margin: 0 auto 20px; }
    svg { transform: rotate(-90deg); width: 100%; height: 100%; }
    circle { fill: none; stroke-width: 2.5; stroke-linecap: round; }
    .c-bg { stroke: rgba(191,149,63,0.1); }
    .c-silk { stroke: #bf953f; transition: none; }
    .stat-n { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; font-size: 38px; color: #bf953f; margin: 0; font-family: serif; }
    .stat-l { font-size: 10px; letter-spacing: 0.6em; color: #999; font-weight: bold; }
</style>