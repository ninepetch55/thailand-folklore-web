<section class="stats-master">
    <div class="stats-grid">
        {[ {t:26, l:'SERIES'}, {t:26, l:'ARCHIVE'}, {t:28, l:'NODES'}, {t:124, l:'ARTIFACTS'} ].map(s => (
            <div class="stat-card">
                <div class="silk-box">
                    <svg viewBox="0 0 100 100">
                        <circle class="c-bg" cx="50" cy="50" r="45"></circle>
                        <circle class="silk-line" cx="50" cy="50" r="45"></circle>
                    </svg>
                    <h3 class="n-val" data-target={s.t}>0</h3>
                </div>
                <p class="l-val">{s.l}</p>
            </div>
        ))}
    </div>
</section>

<script is:inline>
    const runStatsSovereign = () => {
        const obs = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const h3 = entry.target.querySelector('.n-val');
                    const silk = entry.target.querySelector('.silk-line');
                    const targetNum = parseInt(h3.dataset.target);
                    
                    // วัดขนาดเส้นจริงแบบ Fail-Safe
                    const circumference = silk.getTotalLength();
                    silk.style.strokeDasharray = circumference;
                    silk.style.strokeDashoffset = circumference;

                    let start = null;
                    const duration = 2500;
                    const frame = (now) => {
                        if (!start) start = now;
                        const progress = Math.min((now - start) / duration, 1);
                        h3.innerText = Math.floor(progress * targetNum);
                        silk.style.strokeDashoffset = circumference - (progress * (circumference * 0.8));
                        if (progress < 1) requestAnimationFrame(frame);
                        else h3.innerText = targetNum;
                    };
                    requestAnimationFrame(frame);
                    obs.unobserve(entry.target);
                }
            });
        }, { threshold: 0.5 });
        document.querySelectorAll('.stat-card').forEach(b => obs.observe(b));
    };
    window.addEventListener('load', runStatsSovereign);
</script>

<style>
    .stats-master { padding: 120px 0; background: #FDFCFB; }
    .stats-grid { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
    .stat-card { text-align: center; }
    .silk-box { position: relative; width: 140px; height: 140px; margin: 0 auto 20px; }
    svg { transform: rotate(-90deg); width: 100%; height: 100%; }
    circle { fill: none; stroke-width: 2.5; stroke-linecap: round; }
    .c-bg { stroke: rgba(191,149,63,0.1); }
    .silk-line { stroke: #bf953f; transition: none; }
    .n-val { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; font-size: 38px; color: #bf953f; margin: 0; font-family: serif; }
    .l-val { font-size: 10px; letter-spacing: 0.6em; color: #999; font-weight: bold; }
</style>