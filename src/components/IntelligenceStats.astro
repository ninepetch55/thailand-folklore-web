<section class="stats-section-final">
    <div class="stats-grid">
        {[ {t:26, l:'SERIES'}, {t:26, l:'ARCHIVE'}, {t:28, l:'NODES'}, {t:124, l:'ARTIFACTS'} ].map(s => (
            <div class="stat-box">
                <div class="circle-container">
                    <svg viewBox="0 0 100 100">
                        <circle class="c-bg" cx="50" cy="50" r="45"></circle>
                        <circle class="silk-line" cx="50" cy="50" r="45"></circle>
                    </svg>
                    <h3 class="stat-num" data-target={s.t}>0</h3>
                </div>
                <p class="stat-label">{s.l}</p>
            </div>
        ))}
    </div>
</section>

<script is:inline>
    const startSilk = () => {
        const obs = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const h3 = entry.target.querySelector('.stat-num');
                    const silk = entry.target.querySelector('.silk-line');
                    const target = parseInt(h3.dataset.target);
                    const circumference = 283;
                    silk.style.strokeDasharray = circumference;
                    silk.style.strokeDashoffset = circumference;

                    let start = null;
                    const duration = 2500;
                    const animate = (now) => {
                        if (!start) start = now;
                        const progress = Math.min((now - start) / duration, 1);
                        h3.innerText = Math.floor(progress * target);
                        silk.style.strokeDashoffset = circumference - (progress * (circumference * 0.8));
                        if (progress < 1) requestAnimationFrame(animate);
                        else h3.innerText = target;
                    };
                    requestAnimationFrame(animate);
                    obs.unobserve(entry.target);
                }
            });
        }, { threshold: 0.6 });
        document.querySelectorAll('.stat-box').forEach(b => obs.observe(b));
    };
    window.addEventListener('load', startSilk);
</script>

