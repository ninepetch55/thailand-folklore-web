<section class="stats-v16">
    <div class="stats-grid">
        {[ {t:26, l:'SERIES'}, {t:26, l:'ARCHIVE'}, {t:28, l:'NODES'}, {t:124, l:'ARTIFACTS'} ].map(s => (
            <div class="stat-box">
                <div class="silk-circle">
                    <svg viewBox="0 0 100 100">
                        <circle class="bg-ring" cx="50" cy="50" r="45"></circle>
                        <circle class="silk-line" cx="50" cy="50" r="45" id={`silk-${s.l}`}></circle>
                    </svg>
                    <h3 class="stat-num" data-target={s.t}>0</h3>
                </div>
                <p class="stat-label">{s.l}</p>
            </div>
        ))}
    </div>
</section>

<script is:inline>
    const startSilkAnimation = (entries, obs) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                const h3 = entry.target.querySelector('.stat-num');
                const line = entry.target.querySelector('.silk-line');
                const target = parseInt(h3.dataset.target);
                
                // Animation Logic
                let current = 0;
                const duration = 2000;
                const startTime = performance.now();

                const animate = (time) => {
                    const elapsed = time - startTime;
                    const progress = Math.min(elapsed / duration, 1);
                    h3.innerText = Math.floor(progress * target);
                    
                    // Silk line logic: 283 is circumference
                    const offset = 283 - (progress * 220); // 220 is about 80% of circle
                    line.style.strokeDashoffset = offset;

                    if (progress < 1) requestAnimationFrame(animate);
                    else h3.innerText = target;
                };

                requestAnimationFrame(animate);
                obs.unobserve(entry.target);
            }
        });
    };

    const obs = new IntersectionObserver(startSilkAnimation, { threshold: 0.6 });
    document.querySelectorAll('.stat-box').forEach(box => obs.observe(box));
</script>

<style>
    .stats-v16 { padding: 120px 0; background: #FDFCFB; }
    .stats-grid { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
    .stat-box { text-align: center; }
    .silk-circle { position: relative; width: 140px; height: 140px; margin: 0 auto 20px; }
    svg { transform: rotate(-90deg); width: 100%; height: 100%; }
    circle { fill: none; stroke-width: 2.5; }
    .bg-ring { stroke: rgba(191,149,63,0.1); }
    .silk-line { stroke: var(--gold); stroke-dasharray: 283; stroke-dashoffset: 283; }
    .stat-num { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; font-size: 38px; color: var(--gold); margin: 0; font-family: serif; }
    .stat-label { font-size: 10px; letter-spacing: 0.6em; color: #999; font-weight: bold; }
</style>