<section class="stats-v20">
    <div class="stats-grid">
        {[ 
            {t:26, l:'SERIES'}, {t:26, l:'ARCHIVE'}, 
            {t:28, l:'NODES'}, {t:124, l:'ARTIFACTS'} 
        ].map(s => (
            <div class="stat-card">
                <div class="circle-box">
                    <svg viewBox="0 0 100 100">
                        <circle class="track" cx="50" cy="50" r="45"></circle>
                        <circle class="silk-path" cx="50" cy="50" r="45"></circle>
                    </svg>
                    <h3 class="stat-number" data-target={s.t}>0</h3>
                </div>
                <p class="stat-label">{s.l}</p>
            </div>
        ))}
    </div>
</section>

<script is:inline>
    const initStats = () => {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const h3 = entry.target.querySelector('.stat-number');
                    const silk = entry.target.querySelector('.silk-path');
                    const targetNum = parseInt(h3.dataset.target);
                    const circumference = 2 * Math.PI * 45; // 282.7
                    
                    // บังคับตั้งค่าเริ่มต้นของเส้น
                    silk.style.strokeDasharray = circumference;
                    silk.style.strokeDashoffset = circumference;

                    let start = null;
                    const duration = 2500;

                    const animate = (timestamp) => {
                        if (!start) start = timestamp;
                        const progress = Math.min((timestamp - start) / duration, 1);
                        
                        // อัปเดตตัวเลข
                        h3.innerText = Math.floor(progress * targetNum);
                        
                        // อัปเดตเส้นสายไหม (วิ่งไปที่ 80% ของวงกลม)
                        const offset = circumference - (progress * (circumference * 0.8));
                        silk.style.strokeDashoffset = offset;

                        if (progress < 1) requestAnimationFrame(animate);
                        else h3.innerText = targetNum;
                    };
                    requestAnimationFrame(animate);
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.5 });
        document.querySelectorAll('.stat-card').forEach(el => observer.observe(el));
    };
    window.addEventListener('load', initStats);
</script>

<style>
    .stats-v20 { padding: 120px 0; background: #FDFCFB; }
    .stats-grid { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
    .stat-card { text-align: center; }
    .circle-box { position: relative; width: 140px; height: 140px; margin: 0 auto 20px; }
    svg { transform: rotate(-90deg); width: 100%; height: 100%; }
    circle { fill: none; stroke-width: 2.5; stroke-linecap: round; }
    .track { stroke: rgba(191,149,63,0.1); }
    .silk-path { stroke: #bf953f; transition: none; }
    .stat-number { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; font-size: 38px; color: #bf953f; margin: 0; }
    .stat-label { font-size: 10px; letter-spacing: 0.6em; color: #999; font-weight: bold; }
</style>