<section class="stats-master-section">
    <div class="stats-grid-container">
        {[ 
            {t:26, l:'SERIES'}, {t:26, l:'ARCHIVE'}, 
            {t:28, l:'NODES'}, {t:124, l:'ARTIFACTS'} 
        ].map(s => (
            <div class="stat-luxury-card">
                <div class="circle-box">
                    <svg viewBox="0 0 100 100">
                        <circle class="track" cx="50" cy="50" r="45"></circle>
                        <circle class="silk-line-anim" cx="50" cy="50" r="45"></circle>
                    </svg>
                    <h3 class="stat-val" data-target={s.t}>0</h3>
                </div>
                <p class="stat-label">{s.l}</p>
            </div>
        ))}
    </div>
</section>

<script is:inline>
    const initStatsAnim = () => {
        const obs = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const h3 = entry.target.querySelector('.stat-val');
                    const line = entry.target.querySelector('.silk-line-anim');
                    const target = parseInt(h3.dataset.target);
                    const circumference = 2 * Math.PI * 45; // 282.7
                    
                    line.style.strokeDasharray = circumference;
                    line.style.strokeDashoffset = circumference;

                    let start = null;
                    const duration = 2500;

                    const step = (timestamp) => {
                        if (!start) start = timestamp;
                        const progress = Math.min((timestamp - start) / duration, 1);
                        
                        // เลขวิ่ง
                        h3.innerText = Math.floor(progress * target);
                        
                        // เส้นสายไหมวิ่ง (80% ของวงกลม)
                        const offset = circumference - (progress * (circumference * 0.8));
                        line.style.strokeDashoffset = offset;

                        if (progress < 1) {
                            window.requestAnimationFrame(step);
                        } else {
                            h3.innerText = target;
                        }
                    };
                    window.requestAnimationFrame(step);
                    obs.unobserve(entry.target);
                }
            });
        }, { threshold: 0.6 });

        document.querySelectorAll('.stat-luxury-card').forEach(card => obs.observe(card));
    };
    window.addEventListener('load', initStatsAnim);
</script>

<style>
    .stats-master-section { padding: 120px 0; background: transparent; }
    .stats-grid-container { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
    .stat-luxury-card { text-align: center; }
    .circle-box { position: relative; width: 140px; height: 140px; margin: 0 auto 20px; }
    svg { transform: rotate(-90deg); width: 100%; height: 100%; }
    circle { fill: none; stroke-width: 2; }
    .track { stroke: rgba(191,149,63,0.1); }
    .silk-line-anim { stroke: #bf953f; transition: none; } /* คุมผ่าน JS */
    .stat-val { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; font-size: 38px; color: #bf953f; margin: 0; }
    .stat-label { font-size: 10px; letter-spacing: 0.6em; color: #999; font-weight: bold; margin: 0; }
    @media (max-width: 768px) { .stats-grid-container { grid-template-columns: repeat(2, 1fr); gap: 40px; } }
</style>