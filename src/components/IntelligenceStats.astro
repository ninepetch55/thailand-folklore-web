<section class="stats-v13">
    <div class="stats-grid">
        {[ 
            {t:26, l:'SERIES'}, {t:26, l:'ARCHIVE'}, 
            {t:28, l:'NODES'}, {t:124, l:'ARTIFACTS'} 
        ].map(s => (
            <div class="stat-card">
                <div class="silk-circle">
                    <svg viewBox="0 0 100 100">
                        <circle class="bg-ring" cx="50" cy="50" r="45"></circle>
                        <circle class="silk-line" cx="50" cy="50" r="45"></circle>
                    </svg>
                    <h3 class="stat-num" data-target={s.t}>0</h3>
                </div>
                <p class="stat-label">{s.l}</p>
            </div>
        ))}
    </div>
</section>

<script is:inline>
    const runStats = () => {
        const obs = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    const el = entry.target;
                    const target = parseInt(el.dataset.target);
                    let curr = 0;
                    const itv = setInterval(() => {
                        if (curr < target) { el.innerText = ++curr; }
                        else { clearInterval(itv); }
                    }, 40);
                    entry.target.closest('.stat-card').classList.add('silk-active');
                    obs.unobserve(el);
                }
            });
        }, { threshold: 0.6 });
        document.querySelectorAll('.stat-num').forEach(n => obs.observe(n));
    };
    window.addEventListener('load', runStats);
</script>

<style>
    .stats-v13 { padding: 120px 0; background: #FDFCFB; }
    .stats-grid { max-width: 1200px; margin: 0 auto; display: grid; grid-template-columns: repeat(4, 1fr); gap: 20px; }
    .stat-card { text-align: center; }
    .silk-circle { position: relative; width: 140px; height: 140px; margin: 0 auto 20px; }
    svg { transform: rotate(-90deg); width: 100%; height: 100%; }
    circle { fill: none; stroke-width: 2; }
    .bg-ring { stroke: rgba(191,149,63,0.1); }
    .silk-line { 
        stroke: var(--gold); stroke-dasharray: 283; stroke-dashoffset: 283; 
        transition: 3.5s cubic-bezier(0.2, 0.8, 0.2, 1); 
    }
    .silk-active .silk-line { stroke-dashoffset: 80; } /* เส้นสายไหมวิ่งเมื่อมองเห็น */
    .stat-num { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; font-size: 38px; color: var(--gold); margin: 0; }
    .stat-label { font-size: 10px; letter-spacing: 0.6em; color: #999; font-weight: bold; }
</style>