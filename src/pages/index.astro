---
import Layout from '../layouts/Layout.astro';
import AbstractHero from '../components/AbstractHero.astro';
---

<Layout title="Thailandfolklore | Heritage">
    <AbstractHero />

    <section class="stage-section">
        <div class="content-limit">
            <div class="header-v37">
                <h2 class="gold-title">Global Stage</h2>
                <div class="line"></div>
                <span class="sub-label">80% Outbound</span>
            </div>

            <div class="fixed-grid">
                {[1, 2, 3, 4, 5, 6, 7, 8].map((i) => (
                    <div class={`card-v37 ${i === 1 || i === 6 ? 'wide' : ''}`}>
                        <img src={`/img/g${i}.jpg`} alt={`Project ${i}`} />
                        <div class="hover-info"><span>View Project</span></div>
                    </div>
                ))}
            </div>
        </div>
    </section>
</Layout>

<style>
    .stage-section { padding: 100px 0; background: #001F3F; }
    .content-limit { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
    
    .header-v37 { display: flex; align-items: center; gap: 20px; margin-bottom: 50px; }
    .gold-title { font-style: italic; font-size: 2.5rem; color: #D4AF37; margin: 0; }
    .line { flex-grow: 1; height: 1px; background: rgba(212,175,55,0.2); }
    .sub-label { color: rgba(255,255,255,0.3); font-size: 10px; letter-spacing: 0.3em; }

    .fixed-grid { 
        display: grid; 
        grid-template-columns: repeat(4, 1fr); 
        gap: 15px; 
    }
    .card-v37 { position: relative; height: 280px; overflow: hidden; background: #000; }
    .card-v37.wide { grid-column: span 2; }
    .card-v37 img { width: 100%; height: 100%; object-fit: cover; transition: 0.5s; }
    .card-v37:hover img { transform: scale(1.1); }
    
    .hover-info { 
        position: absolute; inset: 0; background: rgba(0,31,63,0.8); 
        display: flex; align-items: center; justify-content: center; 
        opacity: 0; transition: 0.3s; color: #D4AF37; font-style: italic; 
    }
    .card-v37:hover .hover-info { opacity: 1; }

    @media (max-width: 768px) {
        .fixed-grid { grid-template-columns: repeat(2, 1fr); }
    }
</style>