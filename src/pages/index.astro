---
import Layout from '../layouts/Layout.astro';
import StatsAbstract from '../components/StatsAbstract.astro';

// หมายเหตุ: ในอนาคตเราจะแยก Slider, Outbound, Inbound, Footer เป็น Component ย่อย
// เพื่อให้คุณ Copy-Paste ได้ง่าย ผมจะใส่โครงสร้างหลักไว้ที่นี่ก่อนครับ
---

<Layout title="Thailandfolklore | Abstract Luxury Heritage">
  <main>
    <section class="relative h-screen flex items-center justify-center overflow-hidden bg-black">
      <div class="absolute inset-0 z-0">
        <img src="/img/h1.jpg" class="w-full h-full object-cover opacity-40 scale-110 animate-ken-burns" alt="Hero" />
      </div>
      <div class="relative z-10 text-center px-6">
        <h1 class="font-serif italic text-5xl md:text-8xl text-[#D4AF37] mb-6 reveal-up">
          Thailandfolklore
        </h1>
        <p class="text-white/60 uppercase tracking-[0.5em] text-xs md:text-sm reveal-up" style="transition-delay: 0.3s;">
          The Global Heritage Flagship
        </p>
      </div>
      <div class="absolute bottom-10 left-1/2 -translate-x-1/2 animate-bounce opacity-20">
        <div class="w-[1px] h-16 bg-white"></div>
      </div>
    </section>

    <section class="py-32 px-6 bg-[#001F3F]">
      <div class="max-w-7xl mx-auto">
        <div class="flex items-center gap-4 mb-16 reveal-up">
          <h2 class="font-serif italic text-4xl text-[#D4AF37]">Global Stage</h2>
          <div class="flex-grow h-[1px] bg-[#D4AF37]/20"></div>
          <span class="text-white/30 text-xs uppercase tracking-widest">80% Outbound</span>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          {[1, 2, 3, 4, 5, 6, 7, 8].map((i) => (
            <div class={`relative overflow-hidden group reveal-up h-64 ${i === 1 || i === 6 ? 'md:col-span-2' : ''}`}>
              <img src={`/img/g${i}.jpg`} class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110" alt={`Project ${i}`} />
              <div class="absolute inset-0 bg-[#001F3F]/60 opacity-0 group-hover:opacity-100 transition-opacity flex items-center justify-center">
                <span class="text-[#D4AF37] font-serif italic">View Project</span>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <StatsAbstract />

    <section class="py-32 px-6 bg-[#001F3F]">
      <div class="max-w-7xl mx-auto">
        <div class="flex items-center gap-4 mb-16 reveal-up">
          <span class="text-white/30 text-xs uppercase tracking-widest">20% Inbound</span>
          <div class="flex-grow h-[1px] bg-[#D4AF37]/20"></div>
          <h2 class="font-serif italic text-4xl text-[#D4AF37]">Heritage Roots</h2>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          {[1, 2, 3, 4].map((i) => (
            <div class="relative aspect-square overflow-hidden reveal-up">
              <img src={`/img/h${i}.jpg`} class="w-full h-full object-cover grayscale hover:grayscale-0 transition-all duration-700" alt={`Heritage ${i}`} />
            </div>
          ))}
        </div>
      </div>
    </section>

    <footer class="py-20 bg-[#00162d] border-t border-[#D4AF37]/10 relative overflow-hidden">
      <div id="footer-aura" class="absolute w-[500px] h-[500px] bg-[#D4AF37]/5 rounded-full blur-[100px] pointer-events-none transition-transform duration-300"></div>
      <div class="max-w-7xl mx-auto px-6 text-center relative z-10">
        <h3 class="font-serif italic text-3xl text-[#D4AF37] mb-8">Thailandfolklore</h3>
        <div class="flex justify-center gap-12 text-[10px] uppercase tracking-[0.3em] text-white/40 mb-12">
          <a href="#" class="hover:text-[#D4AF37] transition-colors">History</a>
          <a href="#" class="hover:text-[#D4AF37] transition-colors">Verify</a>
          <a href="#" class="hover:text-[#D4AF37] transition-colors">Contact</a>
        </div>
        <p class="text-[9px] text-white/20 uppercase tracking-[0.5em]">
          &copy; 2026 Thailandfolklore Foundation. Strictly No-Cloud.
        </p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  @keyframes ken-burns {
    0% { transform: scale(1); }
    100% { transform: scale(1.1); }
  }
  .animate-ken-burns {
    animation: ken-burns 20s infinite alternate ease-in-out;
  }
</style>

<script>
  // ระบบ Aura ติดตามเมาส์ใน Footer
  const aura = document.getElementById('footer-aura');
  window.addEventListener('mousemove', (e) => {
    if (aura) {
      const rect = aura.parentElement!.getBoundingClientRect();
      const x = e.clientX - 250;
      const y = e.clientY - rect.top - 250;
      aura.style.transform = `translate(${x}px, ${y}px)`;
    }
  });
</script>