<Layout title="Thailandfolklore | Abstract Luxury Heritage">
  <main class="main-container">
    
    <AbstractHero />

    <section class="global-stage">
      <div class="section-header">
        <h2 class="gold-italic">Global Stage</h2>
        <div class="line"></div>
        <span class="sub-tag">80% Outbound</span>
      </div>
      
      <div class="project-grid">
        {[1, 2, 3, 4, 5, 6, 7, 8].map((i) => (
          <div class={`grid-item ${i === 1 || i === 6 ? 'wide' : ''}`}>
            <img src={`/img/g${i}.jpg`} alt={`Project ${i}`} class="grid-img" />
            <div class="img-overlay">
              <span>View Project</span>
            </div>
          </div>
        ))}
      </div>
    </section>

    <IntelligenceStats />

    <section class="heritage-roots">
      <div class="section-header">
        <span class="sub-tag">20% Inbound</span>
        <div class="line"></div>
        <h2 class="gold-italic">Heritage Roots</h2>
      </div>
      
      <div class="roots-grid">
        {[1, 2, 3, 4].map((i) => (
          <div class="root-item">
            <img src={`/img/h${i}.jpg`} alt={`Heritage ${i}`} class="root-img" />
          </div>
        ))}
      </div>
    </section>

    <footer class="main-footer">
      <div id="footer-aura"></div>
      <div class="footer-content">
        <h3 class="gold-italic">Thailandfolklore</h3>
        <nav class="footer-nav">
          <a href="#">History</a>
          <a href="#">Verify</a>
          <a href="#">Contact</a>
        </nav>
        <p class="copyright">
          &copy; 2026 Thailandfolklore Foundation. Strictly No-Cloud.
        </p>
      </div>
    </footer>
  </main>
</Layout>

<style>
  /* üèóÔ∏è Core Layout Fixes */
  .main-container {
    background: #001F3F; /* ‡∏™‡∏µ‡∏ô‡πâ‡∏≥‡πÄ‡∏á‡∏¥‡∏ô‡πÄ‡∏Ç‡πâ‡∏°‡∏ï‡∏≤‡∏°‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡∏ï‡πâ‡∏≠‡∏á‡∏Å‡∏≤‡∏£ */
  }

  .section-header {
    max-width: 1200px;
    margin: 0 auto 60px;
    padding: 0 20px;
    display: flex;
    align-items: center;
    gap: 20px;
  }

  .gold-italic {
    font-family: serif;
    font-style: italic;
    font-size: clamp(2rem, 5vw, 3rem);
    color: #D4AF37;
    margin: 0;
  }

  .line { flex-grow: 1; h-1px; background: rgba(212, 175, 55, 0.2); }
  .sub-tag { color: rgba(255, 255, 255, 0.3); font-size: 10px; letter-spacing: 0.3em; text-transform: uppercase; }

  /* üñºÔ∏è Grid Styling */
  .global-stage, .heritage-roots { padding: 120px 0; }
  
  .project-grid, .roots-grid {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 15px;
  }

  .grid-item { position: relative; height: 300px; overflow: hidden; background: #000; }
  .grid-item.wide { grid-column: span 2; }
  .grid-img, .root-img { width: 100%; height: 100%; object-fit: cover; transition: 0.8s; }
  .grid-item:hover .grid-img { transform: scale(1.1); }
  
  .img-overlay {
    position: absolute; inset: 0; background: rgba(0, 31, 63, 0.7);
    display: flex; align-items: center; justify-content: center;
    opacity: 0; transition: 0.4s; color: #D4AF37; font-style: italic;
  }
  .grid-item:hover .img-overlay { opacity: 1; }

  /* üèõÔ∏è Footer Styling */
  .main-footer {
    padding: 100px 0;
    background: #00162d;
    border-top: 1px solid rgba(212, 175, 55, 0.1);
    position: relative;
    overflow: hidden;
    text-align: center;
  }

  #footer-aura {
    position: absolute; width: 500px; height: 500px;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.05) 0%, transparent 70%);
    border-radius: 50%; blur: 80px; pointer-events: none;
    z-index: 1;
  }

  .footer-content { position: relative; z-index: 10; }
  .footer-nav { display: flex; justify-content: center; gap: 40px; margin: 40px 0; }
  .footer-nav a { color: rgba(255, 255, 255, 0.4); text-decoration: none; font-size: 10px; letter-spacing: 0.2em; transition: 0.3s; }
  .footer-nav a:hover { color: #D4AF37; }
  .copyright { font-size: 9px; color: rgba(255, 255, 255, 0.2); letter-spacing: 0.4em; }
</style>

<script>
  const aura = document.getElementById('footer-aura');
  window.addEventListener('mousemove', (e) => {
    if (aura) {
      const rect = aura.parentElement.getBoundingClientRect();
      const x = e.clientX - 250;
      const y = e.clientY - rect.top - 250;
      aura.style.transform = `translate(${x}px, ${y}px)`;
    }
  });
</script>